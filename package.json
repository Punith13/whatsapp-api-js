{
  "name": "whatsapp-api-js",
  "version": "1.0.0",
  "author": "Secreto31126",
  "description": "A TypeScript server agnostic Whatsapp's Official API framework",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">10.10"
  },
  "files": [
    "lib/**/*"
  ],
  "types": "lib/esm/index.d.ts",
  "module": "lib/esm/index.js",
  "main": "lib/cjs/index.cjs",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.cjs"
    },
    "./messages": {
      "import": "./lib/esm/messages/index.js",
      "require": "./lib/cjs/messages/index.cjs"
    },
    "./*": {
      "import": "./lib/*.js",
      "require": "./lib/cjs/*.cjs"
    }
  },
  "scripts": {
    "build": "npm run build:code && npm run build:types",
    "build:code": "node -r dotenv/config build.js",
    "build:types": "npm run build:types:esm && npm run build:types:cjs",
    "build:types:esm": "tsc --outDir ./lib/esm && cp ./src/*.d.ts ./lib/esm",
    "build:types:cjs": "tsc --outDir ./lib/cjs && cp ./src/*.d.ts ./lib/cjs",
    "test": "mocha",
    "test:build": "npm run build && npm run test",
    "test:watch": "mocha --reporter min --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --check src test",
    "prettier:write": "prettier --write src test",
    "coverage": "c8 mocha --reporter min",
    "document": "typedoc && cp -r docs_statics/* docs/",
    "clear": "rm -rf docs/ docs_temp/ lib/ coverage/ .nyc_output/"
  },
  "keywords": [
    "whatsapp",
    "cloud",
    "api",
    "framework",
    "whatsapp-cloud",
    "cloud-api",
    "whatsapp-cloud-api",
    "whatsapp-business",
    "whatsapp-business-api",
    "bot",
    "whatsapp-bot",
    "chatbot",
    "bot-framework",
    "typescript",
    "server-agnostic",
    "nodejs",
    "deno",
    "bun",
    "bot-api",
    "whatsapp-api",
    "business-api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Secreto31126/whatsapp-api-js.git"
  },
  "devDependencies": {
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "c8": "7.13.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.18",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "glob": "^10.2.2",
    "mocha": "10.2.0",
    "prettier": "2.8.8",
    "sinon": "15.0.4",
    "typedoc": "0.24.6",
    "typescript": "5.0.4",
    "undici": "5.22.0"
  }
}